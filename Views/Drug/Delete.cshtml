@model Drug

<h1 class="alert-danger"> Warning ! . The deleted data can't be restored.</h1>
<div class="card" style="width: 18rem;">
    <img src="/Images/@Model.Image" class="card-img-top" alt="...">

    <div class="card-body">

        <h5 class="card-title">@Model.Name</h5>

        <p class="card-text">
            <li>ID : @Model.ID</li>
            <li> Name : @Model.Name</li>
        </p>

        <form action="~/Drug/Delete" method="post">
            @Html.HiddenFor(d => d.ID)
            <select name="Choice" class="form-control">
                <option class="form-control" value="y">Yes</option>
                <option class="form-control" value="n">No</option>
            </select>
            <br />
            <input type="submit" class="btn btn-danger"/>
            </form>

            <br />
        <a href="/Drug/Index" class="btn btn-primary">Cancel & Go Back to All Drugs</a>
    </div>
</div>